<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basicColor">

    <ImageView
        android:id="@+id/ivtoolbarimgid"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_8_dp"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:layout_marginBottom="@dimen/margin_8_dp"
        android:src="@drawable/ic_menu"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8_dp"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="@dimen/margin_8_dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivtoolbarimgid"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etsearchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/search_location"
            android:inputType="text"
            android:padding="@dimen/padding_8_dp"
            android:textColor="@color/blackColor"
            android:textColorHint="#A29C9C"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
